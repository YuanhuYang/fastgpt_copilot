# 生产环境配置示例
# 复制为 production.env 并修改所有密码和密钥

# GitHub Copilot配置
GITHUB_TOKEN=your_production_github_token_here

# Copilot Proxy配置
PORT=8888
CORS_ORIGIN=https://your-domain.com
LOG_LEVEL=warn
NODE_ENV=production

# 数据库配置 - 生产环境请使用强密码
MONGO_USERNAME=fastgpt_prod_user
MONGO_PASSWORD=change_me_strong_password_123!
PG_USERNAME=fastgpt_prod_user  
PG_PASSWORD=change_me_strong_password_456!
PG_DATABASE=fastgpt_production

# FastGPT配置 - 生产环境请使用强密码和密钥
FASTGPT_ROOT_PASSWORD=change_me_strong_admin_password_789!
CHAT_API_KEY=your-fastgpt-copilot-api-key
TOKEN_KEY=your_secret_token_key_production_123456789
ROOT_KEY=your_secret_root_key_production_987654321
FILE_TOKEN_KEY=your_secret_file_token_key_production_456789

# SSL配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# 监控配置
ENABLE_MONITORING=true
METRICS_PORT=9090

# 其他配置
COMPOSE_PROJECT_NAME=fastgpt-copilot-prod
